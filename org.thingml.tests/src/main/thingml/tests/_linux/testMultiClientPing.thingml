import "../../../../../../org.thingml.samples/src/main/thingml/core/_linux/test.thingml"
import "../testMultiClientPing.thingml"
import "../tester.thingml"
import "../../../../../../org.thingml.samples/src/main/thingml/core/_linux/timer.thingml"

configuration TestMultiClientPingC 
@output_folder "/home/thingml_out/" {
	instance harness : Tester
	instance dump : TestDumpLinux
	instance test : TestMultiClientPing
 group timer : TimerLinux
 set timer.timer.millisecond = true
 set timer.timer.period = 10
 set timer.clock.period = 10

 connector harness.timer => timer.timer.timer
	connector harness.testEnd => dump.dumpEnd
 connector test.testEnd => dump.dumpEnd
	connector test.harnessOut => dump.dump
	connector test.harnessIn => harness.test
	instance pingServ1 : PingServer
	instance pingServ2 : PingServer
	connector test.ppclient1 => pingServ1.pp
	connector test.ppclient2 => pingServ2.pp
}