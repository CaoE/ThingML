import "./API/api.thingml"

thing APP includes CLIENT {
	
	property leds : Boolean[8]
		set leds[0] = true
		set leds[1] = false
		set leds[2] = true
		set leds[3] = false
		set leds[4] = true
		set leds[5] = false
		set leds[6] = true
		set leds[7] = false
			
	statechart Behavior init Init {
		state Init {
			on entry do
				for(status : Boolean, i : Byte in leds) do
					if (status) leds!turn_on(i)
					else leds!turn_off(i)
				end
			end
		}
	}
}