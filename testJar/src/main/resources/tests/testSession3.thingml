			internal 
			event e : harnessIn?testIn
			guard e.c == '\'x\''
			action fork s
    	}

		session s init S1 {
			state S1 {
				on entry fork t

				transition -> S2
				event e : harnessIn?testIn
				guard e.c == '\'z\''
			}

			final state S2 {
			}

			session t init T1 {
				state T1 {
					internal 
					event e : harnessIn?testIn
					guard e.c == '\'y\''
					action harnessOut!testOut('\'T\'')
				}		
			}
		}
    }
