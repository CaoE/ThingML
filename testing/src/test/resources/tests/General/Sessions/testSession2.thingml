import "../../thingml.thingml"

thing TestSession2 includes Test
@test "ABC # (ABC|ACB|BAC|BCA|CAB|CBA)"
{
	property ID : Char = '\'M\'' as Char

	message m(id : Char)
	message n(id : Char)
	message ready(id : Char)

	internal port p	{
		sends m, n, ready
		receives m, n, ready
	}

	statechart Chart init INIT {
		internal event Test?Done
		action TestDone()
		
		internal
		event e : p?n
		action do
			TestOut(e.id)
		end

    	state INIT {
			transition -> WAIT
			event e : Test?In
			action do
				ID = e.c
				fork s
			end
    	}
    	
    	state WAIT {
    		transition -> INIT
    		event r : p?ready
    		guard r.id == ID
    		action do
    			ID = '\'M\'' as Char
    			p!m(ID)    			
    		end
    	}

		session s <5> init S1 {
			state S1 {		
				on entry p!ready(ID)
						
				transition -> S2
				event e : p?m
				guard e.id == ID
				action p!n(ID)
			}

			final state S2 {
			}
		}
    }
}
