import "../../thingml.thingml"

thing TestCompositeStates includes Test 
@test "n # 01(0)?"
@test "nn # 0123(20)?"
@test "nni # 012320"
@test "nnn # 012345(5420)?"
@test "nnnoip # 01234554210"

{
	statechart TestCompositeStates init I {
		internal event Test?Done
		action TestDone()
	
		state I {
			transition -> C1
			event m : Test?In
			guard m.c == '\'n\''
		}
		
		composite state C1 init C1S1 {
		
		on entry TestOut('\'0\''  as Char)
		on exit TestOut('\'0\''  as Char)
		transition -> I
		event m : Test?In
		guard m.c == '\'i\''
		
			state C1S1 {
				on entry TestOut('\'1\''  as Char)
				transition -> C1S2
				event m : Test?In
				guard m.c == '\'n\''
			}
			
			composite state C1S2 init C2S1 {
				
				on entry TestOut('\'2\''  as Char)
				on exit TestOut('\'2\''  as Char)
				transition -> C1S1
				event m : Test?In
				guard m.c == '\'o\''
				
				state C2S1 {	
					on entry TestOut('\'3\''  as Char)
					transition -> C2S3
					event m : Test?In
					guard m.c == '\'n\''
				}
				
				state C2S2 {
					on exit TestOut('\'3\''  as Char)
					transition -> C2S3
					event m : Test?In
					guard m.c == '\'n\''
				}
				
				composite state C2S3 init C3S1 {
				
					on entry TestOut('\'4\'' as Char)
					on exit TestOut('\'4\'' as Char)
					transition -> C2S2
					event m : Test?In
					guard m.c == '\'p\''
				
					composite state C3S1 init C4S1 {
					
						on entry TestOut('\'5\'' as Char)
						on exit TestOut('\'5\'' as Char)
						
						state C4S1 {
						}
					}
				}
			}
		}
	}
}
